MVI D,0FH           
START:
MVI E,04H           ; бафы то 4 стом е циа том летягтг
LXI B,0064H         ; циа тгм йахустеягсг
CALL KIND           ; диабафы апо то пкгйтяокоцио
CPI 01H             ; 01
JZ LAMP_1           ; ам еимаи 01 паы ма амаьы тA 01-04
CPI 02H             ; 02
JZ LAMP_1           ; ам еимаи 02 паы ма амаьы тA 01-04
CPI 03H             ; 03
JZ LAMP_1           ; ам еимаи 03 паы ма амаьы тA 01-04
CPI 04H             ; 04
JZ LAMP_1           ; ам еимаи 04 паы ма амаьы тA 01-04
CPI 05H             ; 05
JZ LAMP_2           ; ам еимаи 05 паы ма амаьы тA 05-08
CPI 06H             ; 06
JZ LAMP_2           ; ам еимаи 06 паы ма амаьы TA 05-08
CPI 07H             ; 07
JZ LAMP_2           ; ам еимаи 07 паы ма амаьы тA 05-08
CPI 08H             ; 08
JZ LAMP_2           ; ам еимаи 08 паы ма амаьы тA 05-08

MVI A,FFH           ; ам дем евы патгсеи типота та ажгмы ока сбгста
STA 3000H
JMP START



LAMP_1:             ; амабы тA калпайиA 01-04 (00001111)=(F)
MOV A,D
CMA
CALL DELB
CALL DELB
CALL DELB
CALL DELB
CALL DELB
STA 3000H           ; елжамифы то апотекесла
JMP COUNTER_1       ; паы стгм яоутима поуекецвеи оти амабосбгмеи 4 жояес



LAMP_2:             ; амабы тA калпайиA 05-08 (11110000)=(F0)
MOV A,D
CALL DELB           ; ежаялофы тгм йахустеягсг
CALL DELB
CALL DELB
CALL DELB
CALL DELB
STA 3000H           ;╢елжамифы то апотекесла
JMP COUNTER_2       ; паы стгм яоутима поу екецвеи оти амабосбгмеи 4 жояес




COUNTER_1:           
MVI A,00H           ; сбгмы ока та калпайиа
CMA          
CALL DELB           ; ежаялофы тг йахустеягсг
CALL DELB
CALL DELB
CALL DELB
CALL DELB
STA 3000H           ; елжамифы тгм енодо
DCR E               ; леиымы том летягтг
JZ START            ; ам еимаи лгдем епистяежы стгм аявг
JMP LAMP_1          ; аккииыс паы ма та намаамаьы

COUNTER_2:           
MVI A,00H           ; сбгмы ока та калпайиа 
CMA
CALL DELB           ; ежаялофы тгм йахустеягсг
CALL DELB
